@model StMagazine.ViewModels.CViewModel.CoursEditViewModel
@{
    ViewBag.Title = "Редактирование курса";
}
<form asp-action="edit" asp-controller="Cours" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Number" class="control-label">Номер курса</label>
        <input type="number" asp-for="Number" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="button7" />
    </div>
</form>