@model StMagazine.ViewModels.IViewModel.ItemDeleteViewModel
@{
    ViewBag.Title = "Удаление предмета";
}
<div>
    <dl class="dl-horizontal">
        <dt>Название предмета</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        </dl>
    <div>
        <form asp-controller="Item" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="button7" value="Удалить" />
            </div>
        </form>
    </div>
</div>