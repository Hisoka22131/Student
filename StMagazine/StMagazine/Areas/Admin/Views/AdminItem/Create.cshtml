@using StMagazine.ViewModels.IViewModel;
@model ItemCreateViewModel;
@{
    ViewBag.Title = "Добавление предмета";
}
<form asp-antiforgery="true" asp-area="Admin" asp-action="create" asp-controller="AdminItem" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label asp-for="Name" class="control-label">Название предмета</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="button7" />
    </div>
</form>
@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}