@model StMagazine.ViewModels.StudentDeleteViewModel;
@{
    ViewBag.Title = "Удаление студента";
    var photoPath = "~/Images/" + (Model.ExistingPhotoPath ?? "noimage.png");
}
<div enctype="multipart/form-data" asp-area="Admin" asp-action="delete" asp-controller="AdminSt">
    <input hidden asp-for="Id" />
    <input hidden asp-for="ExistingPhotoPath" />
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>Фамилия</dt>
        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt>Номер телефона</dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt>Группа</dt>
        <dd>
            @Html.DisplayFor(model => model.GroupId)
        </dd>
    </dl>
</div>
<div class="form-group row col-sm-4 offset-4">
    <img width="250" height="200" src="@photoPath" class="imageThumbnail" asp-append-version="true">
</div>
<div>
    <form asp-area="Admin" asp-controller="AdminSt" asp-action="Delete" method="post">
        <div class="form-group">
            <input type="submit" class="button7" value="Удалить" />
        </div>
    </form>
</div>
