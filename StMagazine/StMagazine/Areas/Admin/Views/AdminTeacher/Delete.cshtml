@model StMagazine.ViewModels.TeacherDeleteViewModel;
@{
    ViewBag.Title = "Удаление учителя";
    var photoPath = "~/Images/" + (Model.ExistingPhotoPath ?? "noimage.png");
}
<div>
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>Фамилия</dt>
        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt>Номер телефона</dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt>Предмет(ы)</dt>
        <dd>
            @Html.DisplayFor(model => model.ItemId)
        </dd>
    </dl>
    <div class="form-group row col-sm-4 offset-4">
        <img width="250" height="200" src="@photoPath" class="imageThumbnail" asp-append-version="true">
    </div>
    <div>
        <form asp-area="Admin" asp-controller="AdminTeacher" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="button7" value="Удалить" />

            </div>
        </form>
    </div>
</div>