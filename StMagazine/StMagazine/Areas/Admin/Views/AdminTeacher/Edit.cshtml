@model StMagazine.ViewModels.TeacherEditViewModel
@{
    ViewBag.Title = "Редактирование учителя";
    var photoPath = "~/Images/" + (Model.ExistingPhotoPath ?? "noimage.png");
}
<form asp-area="Admin" asp-action="edit" asp-controller="AdminTeacher" enctype="multipart/form-data">
    <input hidden asp-for="Id" />
    <input hidden asp-for="ExistingPhotoPath" />
    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Фамилия</label>
        <input type="text" asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Номер телефона</label>
        <input type="number" asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="=form-group">
        <label asp-for="ItemId" class="control-label">Название предмета</label>
        <select asp-for="ItemId" asp-items="ViewBag.Items"></select>
    </div>
    <div class="form-group row">
        <label asp-for="Photo" class="col-sm-2 col-form-label">Фото учителя</label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input multiple asp-for="Photo" class="form-control custom-file-input" />
                <label class="custom-file-label">Нажмите сюда,чтобы изменить фото...</label>
            </div>
        </div>
    </div>
    <div class="form-group row col-sm-4 offset-4">
        <img width="250" height="200" src="@photoPath" class="imageThumbnail" asp-append-version="true">
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="button7" />

    </div>
</form>